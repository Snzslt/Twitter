@model List<Twitter.ViewModels.SearchResult>
@using Twitter.Common
@if (Model.Any())
{
    @foreach (var item in Model)
    {
        @if (item.UserId != User.Identity.GetUserId())
        {
            <div class="row p-2">
            <div class="col-md-2">
                @if (item.Avatar is null)
                {
                    <img src="~/image/avatar.png" width="42" height="42" alt="Avatar" class="user-round-image">

                }
                else
                {
                    <img src="~/uploads/@item.Avatar" width="42" height="42" alt="Avatar" class="user-round-image">

                }
            </div>
            <div class="col-md-6">
                <a asp-action="Profile" asp-controller="User" asp-route-userId="@item.UserId">
                    <b style="font-size:14px;">@item.DisplayName</b>
                    <div style="font-size:12px;color:gray;">@(String.Format("@{0}", item.UserName))</div>
                </a>
            </div>
        </div>
        }  
    }
}
else
{
    <div class="col-md-2">
        User Not Found!
    </div>

}